<% provide(:title, @collection.name) %>
<div class="row">
  <aside class="col">
    <section class="user_info">
      <p><%= @collection.name %></p>
    </section>
    <section class="collection_form">
      <%= render "shared/card_search_form", locals: {collection_id: @collection.id} %>
    </section>
  </aside>
  <div class="col">
    <% if @collection.cards.any? %>
      <h3>Cards (<%= @collection.cards.count %>)</h3>
      <div class="cards">
        <%= render @cards %>
      </div>
    <% end %>
  </div>
</div>